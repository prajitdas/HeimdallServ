<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="vertical" >
	<TextView
	    android:id="@+id/perm_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textAppearance="@android:style/TextAppearance.Holo.Medium" />
	<TextView
	    android:id="@+id/perm_description"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/perm_name"
	    android:textAppearance="@android:style/TextAppearance.Holo.Small" />
	<TextView
	    android:id="@+id/protection_level"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/perm_description"
	    android:textAppearance="@android:style/TextAppearance.Holo.Small" />
	<TextView
	    android:id="@+id/perm_group"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/protection_level"
	    android:textAppearance="@android:style/TextAppearance.Holo.Small" />
</RelativeLayout>